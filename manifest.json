{
  "manifest_version": 2,
  "name": "metafilter-favouriteers",
  "version": "1.2",
  "description": "Adds a mouseover popup of favouriteers to each Metafilter post comment.",
  "icons": {
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [{
    "matches": ["*://*.metafilter.com/*"],
    "js": ["content/index.js"],
    "css": ["content/index.css"]
  }],
  "permissions": [
    "*://*.metafilter.com/*",
    "webRequest"
  ]
}